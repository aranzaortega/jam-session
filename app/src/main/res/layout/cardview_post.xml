<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <ImageView
            android:id="@+id/imageViewPostCard"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/textViewTitlePostCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título"
            android:padding="10dp"
            android:textSize="16dp"
            android:maxLines="1"
            android:textColor="@color/flickr_blue"/>

        <TextView
            android:id="@+id/textViewDescriptionPostCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:layout_margin="10dp"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/textViewLocationPostCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lugar"
            android:layout_margin="10dp"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/textViewDatePostCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:layout_margin="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp">

            <ImageView
                android:id="@+id/imageViewJoin"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_check_circle_gray"/>

            <TextView
                android:id="@+id/textViewJoin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Participar"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/textViewJoiners"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0 participantes"
                android:gravity="center|right"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>